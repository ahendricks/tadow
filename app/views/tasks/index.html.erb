<div class='container'>
	<div class='row'>
		<div class='col-md-6 col-md-offset-3'>	
			<h1>Tasks</h1>
			<ul class='list-group'>
				<% @tasks.each do |t| %>
					<li class='list-group-item'>
						<%= t.name %>
						<span class='pull-right'>
							<span class='glyphicon glyphicon-check'></span>
							<span class='glyphicon glyphicon-trash'></span>
						</span>
					</li>
				<% end %>
			</ul>
		</div>
	</div>
</div>