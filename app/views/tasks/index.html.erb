<div class='container'>
	<div class='row'>
		<div class='col-md-6 col-md-offset-3'>	
			<h1>Tasks</h1>
			<%= form_for @new_task, html: { class: 'form-inline' } do |f| %>
				<%= f.text_field :name, class: 'form-control', 
																placeholder: 'Enter task name' %>
				<%= f.submit "Create task", class: "btn btn-primary" %>
			<% end %>

			<br />

			<div class="panel-group" id="accordion">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h4 class="panel-title">
              <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne"><span class="glyphicon glyphicon-plus"></span>Friday</a>
            </h4>
          </div>
          <div id="collapseOne" class="panel-collapse collapse in">
            <ul class="list-group">

              <% @tasks.each do |t| %>
								<li class='list-group-item'>
									<%= "#{ t.name } - #{ t.due_date.strftime("%A") } #{ "- Complete" if t.completed_date }" %>
									<span class='pull-right'>
										<%= link_to "<span class='glyphicon glyphicon-check'></span>".html_safe, complete_task_path(t), method: 'patch' %>
										<%= link_to "<span class='glyphicon glyphicon-trash'></span>".html_safe, task_path(t), method: 'delete' %>
									</span>
								</li>
							<% end %>

            </ul>
          </div>
        </div>
      </div>
    </div>
	</div>
</div>
