<div class='container'>
	<div class='row'>
		<div class='col-md-6 col-md-offset-3'>	
			<h1>Tasks</h1>
			<%= form_for @new_task, html: { class: 'form-inline' } do |f| %>
				<%= f.text_field :name, class: 'form-control', 
																placeholder: 'Enter task name' %>
				<%= f.submit "Create task", class: "btn btn-primary" %>
			<% end %>

			<br />

			<% @tasks.group_by(&:due_date).each do |day, tasks| %>
				<div class="panel-group" id="accordionTwo">
					<div class="panel panel-default">
						<div class="panel-heading">
							<a class="accordion-toggle" data-toggle="collapse" href=<%= "#collapse-#{day}" %>><%= day.strftime("%A") %></a>
							<div class="count-badge pull-right">
								<span class="badge"><%= tasks.count %></span>
							</div>
						</div>
						<div class="panel-collapse collapse in" id=<%= "collapse-#{day}" %>>
							<div class="list-group">
								<%= render tasks %>
							</div>
						</div>
					</div>
				</div>
			<% end %>
			
    </div>
	</div>
</div>
